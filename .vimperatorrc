
set noerrorbells

set focuscontent

noremap j 4<C-e>
noremap k 4<C-y>
noremap tt :tabopen<Space>
noremap tn <C-n>
noremap tp <C-p>

noremap d <C-w>

set hintchars="jklfdsahgiopewqty"
" highlight Hint z-index:5000; font-size:14px; color:white; background-color:green; border-color:ButtonShadow; border-width:1px; border-style:solid; padding:1px 2px 1px 2px; position:absolute; font-family: Menlo, Consolas, Monaco, monospace; text-transform: lowercase;
highlight Hint font-size: 21px; font-weight: bold; text-shadow: -1px -1px 2px black, 1px -1px 2px black, -1px 1px 2px black, 1px 1px 2px black; color: #33cccc;

set ignorecase
set smartcase

nnoremap s :tabopen<Space>google<space>
" Search clipboard text / selected text.
nmap S <C-c>:tabopen<Space>google<Space><C-v><CR>
vmap S <C-c><Esc><Esc>:tabopen<Space>google<Space><C-v><CR>

" Open clipboad URL / selected URL
nmap T <C-c>:tabopen<Space><C-v><CR>
vmap T <C-c><Esc><Esc>:tabopen<Space><C-v><CR>

" Open clipboad URL / selected URL with new private window
nmap W <C-c>:winopen -p<Space><C-v><CR>
vmap W <C-c><Esc><Esc>:winopen -p<Space><C-v><CR>

"ノーマルモード時に自動でimeをOFFにする
"コピペ元ページ　 http://vimperator.g.hatena.ne.jp/teramako/20090311/1236776437
style -name commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

" move page, then always disable `ignore all key`.
" http://qiita.com/mwmsnn/items/93db4ddf3d8c9babd603
autocmd LocationChange .* js modes.passAllKeys = false
